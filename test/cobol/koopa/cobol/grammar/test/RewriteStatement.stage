package koopa.cobol.grammar.test;
grammar koopa.cobol.grammar.CobolGrammar;
tokenizer koopa.cobol.sources.test.CobolTestSource;

target rewriteStatement;

+[ REWRITE MY-RECORD # . ]

+[ REWRITE MY-RECORD FROM MY-IDENTIFIER # . ]

+[ REWRITE MY-RECORD FROM "some literal" # . ]

+[ REWRITE MY-RECORD
   END-REWRITE ]

+[ REWRITE MY-RECORD FROM MY-IDENTIFIER
   END-REWRITE ]

+[ REWRITE MY-RECORD FROM "some literal"
   END-REWRITE ]

+[ REWRITE MY-RECORD 
   INVALID KEY
      DISPLAY "Oops." ]

+[ REWRITE MY-RECORD FROM MY-IDENTIFIER
   INVALID KEY
      DISPLAY "Oops." ]

+[ REWRITE MY-RECORD 
   INVALID
      DISPLAY "Oops." ]

+[ REWRITE MY-RECORD FROM MY-IDENTIFIER
   INVALID
      DISPLAY "Oops." ]

+[ REWRITE MY-RECORD 
   NOT INVALID KEY
      DISPLAY "A-OK." ]

+[ REWRITE MY-RECORD FROM MY-IDENTIFIER
   NOT INVALID KEY
      DISPLAY "A-OK." ]

+[ REWRITE MY-RECORD 
   NOT INVALID
      DISPLAY "A-OK." ]

+[ REWRITE MY-RECORD FROM MY-IDENTIFIER
   NOT INVALID
      DISPLAY "A-OK." ]

+[ REWRITE MY-RECORD 
   INVALID KEY
      DISPLAY "Oops." 
   END-REWRITE ]

+[ REWRITE MY-RECORD FROM MY-IDENTIFIER
   INVALID KEY
      DISPLAY "Oops." 
   END-REWRITE ]

+[ REWRITE MY-RECORD 
   INVALID
      DISPLAY "Oops." 
   END-REWRITE ]

+[ REWRITE MY-RECORD FROM MY-IDENTIFIER
   INVALID
      DISPLAY "Oops." 
   END-REWRITE ]

+[ REWRITE MY-RECORD 
   NOT INVALID KEY
      DISPLAY "A-OK." 
   END-REWRITE ]

+[ REWRITE MY-RECORD FROM MY-IDENTIFIER
   NOT INVALID KEY
      DISPLAY "A-OK." 
   END-REWRITE ]

+[ REWRITE MY-RECORD 
   NOT INVALID
      DISPLAY "A-OK." 
   END-REWRITE ]

+[ REWRITE MY-RECORD FROM MY-IDENTIFIER
   NOT INVALID
      DISPLAY "A-OK." 
   END-REWRITE ]

   
+[ REWRITE MY-RECORD
     WITH NO LOCK 
   END-REWRITE ]

+[ REWRITE MY-RECORD
     WITH LOCK 
   END-REWRITE ]

+[ REWRITE MY-RECORD
     NO LOCK 
   END-REWRITE ]

+[ REWRITE MY-RECORD
     LOCK 
   END-REWRITE ]


+[ REWRITE MY-RECORD 
     RETRY N TIMES
   END-REWRITE ]

+[ REWRITE MY-RECORD 
     RETRY 3 TIMES
   END-REWRITE ]

+[ REWRITE MY-RECORD 
     RETRY FOR N SECONDS
   END-REWRITE ]

+[ REWRITE MY-RECORD 
     RETRY FOR 3 SECONDS
   END-REWRITE ]

+[ REWRITE MY-RECORD 
     RETRY FOREVER
   END-REWRITE ]
