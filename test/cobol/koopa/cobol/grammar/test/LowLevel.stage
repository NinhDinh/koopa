package koopa.cobol.grammar.test;
grammar koopa.cobol.grammar.CobolGrammar;

target cobolWord;

+[ COBOL-WORD ]
+[ cobol-word ]
+[ COBOL_WORD ]
+[ cobol_word ]
+[ aC0b0lW0rd ]
+[ ABCDEFGHIJKLMNOPQRSTUVWXYZ78901 ]
-[ ABCDEFGHIJKLMNOPQRSTUVWXYZ789012 ]

# By Rob Stapper; confirmed by Simon Sobisch.
+[ 00-00 ]
# But I'm disallowing numbers as legal cobol words for now:
-[ 00 ]



# TODO Test rejection of all keywords.



target integerLiteral;

+[ 1 ]
-[ 2.0 ]
-[ "ABC" ]
-[ DEF ]


target decimal;

-[ 1 ]
+[ 2.0 ]
+[ 0.2 ]
+[ 0,2 ]
+[ .2 ]
-[ "ABC" ]
-[ DEF ]

# Bug found by Marc Dzaebel. The '.' and '01' were being merged into a decimal,
# because the newline after the '.' was not seen by the parser.
-[ .
01 ]


target booleanLiteral;

+[ b"0001" ]
+[ B"0010" ]

+[ bx"A" ]
+[ BX"A" ]


target hexadecimal;

+[ h"00" ]
+[ H"00" ]
+[ x"00" ]
+[ X"00" ]
+[ nx"00" ]
+[ NX"00" ]


target alphanumericLiteral;

-[ 1 ]
-[ 2.0 ]
+[ "ABC" ]
-[ DEF ]
+[ "THIS ISN""T WRONG" ]
+[ 'THIS ISN''T WRONG EITHER' ]


target literal;

+[ "this is a literal" ]
+[ " 0 " ]
+[ " 1 " ]
+[ " 00 " ]

+[ "Hello " & " world." ]
+[ "Hello world." & CRLF ]
+[ "Hello world." & x"00" ]


target figurativeConstant;

+[ ZERO ]
+[ ALL ZERO ]
+[ ZEROS ]
+[ ALL ZEROS ]
+[ ZEROES ]
+[ ALL ZEROES ]
+[ SPACE ]
+[ ALL SPACE ]
+[ SPACES ]
+[ ALL SPACES ]
+[ HIGH-VALUE ]
+[ ALL HIGH-VALUE ]
+[ HIGH-VALUES ]
+[ ALL HIGH-VALUES ]
+[ LOW-VALUE ]
+[ ALL LOW-VALUE ]
+[ LOW-VALUES ]
+[ ALL LOW-VALUES ]
+[ QUOTE ]
+[ ALL QUOTE ]
+[ QUOTES ]
+[ ALL QUOTES ]
+[ ALL "A" ]
-[ "A" ]
+[ ALL 42 ]
-[ 42 ]
+[ ALL 42.10 ]
-[ 42.10 ]
