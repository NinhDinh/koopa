package koopa.grammars.cobol.test;
grammar koopa.grammars.cobol.CobolGrammar;

target addition_format1;

+[ CORRESPONDING A TO B ]
+[ CORR A TO B ]

+[ CORRESPONDING A TO B ROUNDED ]
+[ CORR A TO B ROUNDED ]

target addition_format2;

+[ A TO B GIVING C ]
+[ A TO B GIVING C ROUNDED ]

+[ A B TO C GIVING D E ]
+[ A B TO C GIVING D ROUNDED E ROUNDED ]

+[ A B GIVING C ]
+[ A B GIVING C ROUNDED ]

+[ A B C GIVING D E ]
+[ A B C GIVING D ROUNDED E ROUNDED ]

+[ ZERO TO B GIVING C ]
+[ A TO ZERO GIVING C ]

target addition_format3;

+[ A TO B ]
+[ A TO B ROUNDED ]

+[ A B TO C D ]
+[ A B TO C ROUNDED D ROUNDED ]

+[ A ZERO TO C D ]

target addStatement;

+[ ADD A TO B ]

+[ ADD A TO B GIVING C ]

+[ ADD A TO B
     ON SIZE ERROR
        DISPLAY "OOPS" ]

+[ ADD A TO B GIVING C
     ON SIZE ERROR
        DISPLAY "OOPS" ]

+[ ADD A TO B
     SIZE ERROR
        DISPLAY "OOPS" ]

+[ ADD A TO B GIVING C
     SIZE ERROR
        DISPLAY "OOPS" ]

+[ ADD A TO B
     NOT ON SIZE ERROR
        DISPLAY "AOK" ]

+[ ADD A TO B GIVING C
     NOT ON SIZE ERROR
        DISPLAY "AOK" ]

+[ ADD A TO B
     NOT SIZE ERROR
        DISPLAY "AOK" ]

+[ ADD A TO B GIVING C
     NOT SIZE ERROR
        DISPLAY "AOK" ]

+[ ADD A TO B
     ON SIZE ERROR
        DISPLAY "OOPS"
     NOT ON SIZE ERROR
        DISPLAY "AOK" ]

+[ ADD A TO B GIVING C
     ON SIZE ERROR
        DISPLAY "OOPS"
     NOT ON SIZE ERROR
        DISPLAY "AOK" ]

+[ ADD A TO B
     ON SIZE ERROR
        DISPLAY "OOPS"
     NOT ON SIZE ERROR
        DISPLAY "AOK"
   END-ADD ]

+[ ADD A TO B GIVING C
     ON SIZE ERROR
        DISPLAY "OOPS"
     NOT ON SIZE ERROR
        DISPLAY "AOK"
   END-ADD ]

+[ ADD A TO B
   END-ADD ]

+[ ADD A TO B GIVING C
   END-ADD ]

